<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.NG.moviesearchbeta"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="15" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity 
            android:name="com.NG.activity.SplashActivity"
            android:label="心情电影"
            android:screenOrientation="portrait">     
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>       
        </activity>      
        <activity 
            android:name="com.NG.activity.Home"
            android:label="搜索"
            android:screenOrientation="portrait">
        </activity>  

        <activity
            android:name="com.NG.activity.MovieDetailPage"
            android:label="电影详情" 
            android:screenOrientation="portrait">
        </activity>
        
        <activity
            android:name="com.NG.activity.MainActivity"
            android:label="搜索" 
            android:screenOrientation="portrait">            
        </activity>
        <activity
            android:name="com.NG.activity.MovieDetailActivity"
            android:label="电影简介" 
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.NG.activity.ShortCommentActivity"
            android:label="短评测试" >
        </activity>
        
    </application>
    
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"></uses-permission>
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"></uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
	<uses-permission android:name="android.permission.READ_PHONE_STATE"></uses-permission>
	<uses-permission android:name="android.permission.CHANGE_WIFI_STATE"></uses-permission>
	<uses-permission android:name="android.permission.ACCESS_WIFI_STATE"></uses-permission>

</manifest>
